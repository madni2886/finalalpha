<%if logged_in? %>
  <%= form_for obj do |f| %>
    <div class="form-group">
      <div class="mb-3 row">
        <div class="col-sm-3">
          <%= f.label :Comment %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :content ,class:"form-control",placeholder:"Title of article",autofocus:true%>
        </div>
      </div>
      <div class="col-sm-3">
        <%= f.submit class:'btn btn-primary btn-lg' %>
      </div>
    </div>
  <% end %>
<%end %>
