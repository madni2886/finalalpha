<%= link_to "Download article" ,user_article_path(@article,format:"pdf") %>
<hr>
<h1>Showing selected article</h1>
<ul>
  <br>
  <%=link_to @article.user.username,user_articles_path(@article.user) %>
  <li><small><%=pluralize(@article.user.articles.count,"article") if @article.user.articles%></small>
  </ul>
  <p>
    Title: <%= @article.title %>
  </p>
  <% if @article.avatar.attached? %>
    <%= image_tag @article.avatar, style: 'height:250px;width:400px;'%>
  <%else%>
  <% end %>
  <p>
    Description: <%= @article.description %>
    <ul class="Listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
          </li>
        </div>
        <%=render 'comments/new', obj:@comment%>
      </div>
    </ul>
    <p>
      <strong>Comment</strong>
      <%=render @article.comments %>
    </p>
    <hr>
    <%= link_to "Back to articles listing" , user_articles_path%>
  </p>
